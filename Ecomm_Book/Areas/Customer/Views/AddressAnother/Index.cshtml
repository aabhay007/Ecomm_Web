@model Ecomm_Book.Models.AddressAnother
<div class="container">

    <h2 class="text-center">Add Another Address</h2>

    <form action="Upsert" method="post">


        <div class="col-8">
            <div class="form-group row m-2 p-2">
                <div class="col-4">
                    <label>Address Name:</label>
                    <input type="text" asp-for="@Model.AddressName" />

                </div>
            </div>   
            <div class="form-group row m-2 p-2">
                <div class="col-4">
                    <label> State:</label>
                    <input type="text" asp-for="@Model.State" />

                </div>
            </div>   
                <div class="form-group row m-2 p-2">
                    <div class="col-4">
                        <label>City:</label>
                        <input type="text" asp-for="@Model.City" />

                    </div>
                </div>   
                    <div class="form-group row m-2 p-2">
                        <div class="col-4">
                            <label>Postal Code:</label>
                            <input type="text" asp-for="@Model.PostalCode" />

                        </div>
                    </div>    
                        <div class="form-group row m-2 p-2">
                            <div class="col-4">
                                <label>Street Add:</label>
                                <input type="text" asp-for="@Model.StreetAdd" />

                            </div>
                        </div>
                            <div class="form-group row m-2 p-2">
                                <div class="col-4">
                                    <button class="btn btn-info" type="submit">Save</button>

                                </div>
                            </div>
                            </div> 

    </form>
</div>



